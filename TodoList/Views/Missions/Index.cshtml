@model IEnumerable<TodoList.Models.Mission>

@{
    ViewData["Title"] = "Index";
}


<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Mission
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>


                    <form id="form_@item.Id" asp-action="DoneEdit">
                        <input type="hidden" name="Id" value="@item.Id" />
                        <input type="hidden" name="Title" value="@item.Title" />
                        <label class="form-check-label">
                            <input type="checkbox" onchange="document.getElementById('form_@item.Id').submit()"
                                   class="form-check-input" name="Done"
                            @if (item.Done)
                            {
                                 <text>checked value="false" </text>
                            }
                            @if (!item.Done)
                            {
                                <text> value="true" </text>
                            } />
                        </label>
                        &nbsp;
                        @Html.DisplayFor(modelItem => item.Title)
                    </form>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
